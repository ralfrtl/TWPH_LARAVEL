{
    "openapi": "3.0.0",
    "info": {
        "title": "Employee Portal API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Authenticate a user then returns a JWT token.",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Registered User's email",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Registered User's password",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "description": "180 random character string",
                                            "type": "string"
                                        },
                                        "token_type": {
                                            "description": "Type of token",
                                            "type": "string"
                                        },
                                        "expires_in": {
                                            "description": "Duration of the generated token in seconds",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Validation errors"
                    }
                }
            }
        },
        "/api/v1/auth/me": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Returns the User's info.",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "email": {
                                            "description": "Email of the logged-in user",
                                            "type": "string"
                                        },
                                        "user_level": {
                                            "description": "1-6",
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Validation errors"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logouts a currently logged-in user.",
                "responses": {
                    "200": {
                        "description": "Success."
                    },
                    "401": {
                        "description": "Unauthorized, no logged-in user."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/auth/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Returns a new login token. User must be logged-in to use this.",
                "responses": {
                    "201": {
                        "description": "returns [token = New JWT login token]"
                    },
                    "401": {
                        "description": "Unauthorized, no logged-in user."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "title": "User",
                "description": "Connects to users table",
                "properties": {
                    "id": {
                        "description": "Unique, auto increment, Primary key",
                        "type": "integer"
                    },
                    "email": {
                        "description": "Unique",
                        "type": "string",
                        "format": "email",
                        "example": "sample@mail.com"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth related endpoints"
        }
    ]
}